<Window x:Class="YoutubeDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YoutubeDownloader"
        mc:Ignorable="d"
        Title="YoutubeDownloader" Height="450" Width="600">
    <Grid>
        <StackPanel Margin="10,40,10,0">
            <Image Source="Logo\youtube.png" Height="200"/>
            <TextBox  Background="Black" FontSize="20" Height="30" Width="500"  Foreground="White" Margin="0,20,0,0"/>
            <Button Content="Download" FontSize="20" FontWeight="Bold" Margin="0,40,0,0" Background="Red" Height="30" Width="100"/>
        </StackPanel>
        
    </Grid>
</Window>
